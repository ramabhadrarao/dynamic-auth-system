    // Custom CSS
    style.
      .sidebar {
        width: 280px;
        position: fixed;
        top: 0;
        left: 0;
        height: 100vh;
        background: #fff;
        border-right: 1px solid #e6e7e9;
        z-index: 1000;
        overflow-y: auto;
      }
      
      .main-content {
        margin-left: 280px;
        min-height: 100vh;
        background: #f8f9fa;
      }
      
      .navbar-brand img {
        height: 32px;
      }
      
      .nav-link {
        display: flex;
        align-items: center;
        padding: 0.75rem 1rem;
        color: #667382;
        border-radius: 0.375rem;
        margin: 0.125rem 0.5rem;
        text-decoration: none;
      }
      
      .nav-link:hover {
        background: #f1f3f4;
        color: #1e293b;
      }
      
      .nav-link.active {
        background: #206bc4;
        color: #fff;
      }
      
      .nav-link svg {
        width: 1.25rem;
        height: 1.25rem;
        margin-right: 0.75rem;
      }
      
      .user-avatar {
        width: 2rem;
        height: 2rem;
        border-radius: 50%;
        background: #206bc4;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 0.875rem;
      }
      
      @media (max-width: 768px) {
        .sidebar {
          transform: translateX(-100%);
          transition: transform 0.3s ease;
        }
        
        .sidebar.show {
          transform: translateX(0);
        }
        
        .main-content {
          margin-left: 0;
        }
      }

